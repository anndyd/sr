<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	controllerName="sap.it.sr.ui.view.Pickup" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page 
		title="{i18n>pickupTitle}" eventDelegate="[onAfterShow]}"
		id="pickupPage">
		<VBox>
			<f:SimpleForm id="pdForm" minWidth="1024"
				maxContainerCols="2" editable="true" layout="ResponsiveGridLayout"
				labelSpanL="4" labelSpanM="4" emptySpanL="1" emptySpanM="1"
				columnsL="1" columnsM="1" class="editableForm">
				<f:content>
					<Label text="{i18n>badgeId}" />
					<Input value="{badgeId}" type="Text" liveChange="onBadgeChange"
						enabled="true" editable="true" maxLength="8">
						<layoutData>
							<l:GridData span="L2 M2 S4" />
						</layoutData>
					</Input>
					
					<Label text="{i18n>empId}" />
					<Input id="empId" value="{empId}" type="Text" liveChange="onEmpChange"
						enabled="true" editable="true" maxLength="8">
						<layoutData>
							<l:GridData span="L2 M2 S4" />
						</layoutData>
					</Input>
					<Input value="{empName}" type="Text" placeholder="{i18n>empName}"
						enabled="false" editable="false" >
						<layoutData>
							<l:GridData span="L2 M3 S4" />
						</layoutData>
					</Input>
						
					<Label text="{i18n>agentId}" />
					<Input value="{agentId}" type="Text" liveChange="onAgentChange"
						enabled="true" editable="true" maxLength="8">
						<layoutData>
							<l:GridData span="L2 M2 S4" />
						</layoutData>
					</Input>
					<Input value="{agentName}" type="Text" placeholder="{i18n>empName}"
						enabled="false" editable="false" >
						<layoutData>
							<l:GridData span="L2 M3 S4" />
						</layoutData>
					</Input>
				</f:content>
			</f:SimpleForm>
		</VBox>

		<footer>
			<Bar>
				<contentRight>
					<Button class="sapUiSmallMarginEnd" id="pickup" text="{i18n>pkCaption}"
						type="Emphasized" visible="true" press="handlePickupPress" />
				</contentRight>
			</Bar>
		</footer>
	</Page>

</core:View>