<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	controllerName="sap.it.sr.ui.view.Login" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page 
		id="loginPage">
		<VBox>
			<f:SimpleForm id="loginForm" backgroundDesign="Transparent" minWidth="1024"
				maxContainerCols="2" editable="true" layout="ResponsiveGridLayout"
				labelSpanL="4" labelSpanM="4" emptySpanL="1" emptySpanM="1"
				columnsL="1" columnsM="1" class="editableForm">
				<f:content>
					<Label text="{i18n>empId}" />
					<Input value="{empId}" type="Text"
						enabled="true" editable="true" maxLength="8">
						<layoutData>
							<l:GridData span="L2 M2 S4" />
						</layoutData>
					</Input>
						
					<Label text="{i18n>password}" />
					<Input value="{password}" type="Text"
						enabled="true" editable="true">
						<layoutData>
							<l:GridData span="L2 M2 S4" />
						</layoutData>
					</Input>
				</f:content>
				<f:content>
					<Label/>
					<Button class="sapUiSmallMarginEnd" id="login" text="{i18n>loginCaption}"
						visible="true" press="handleLoginPress" />
					<Button class="sapUiSmallMarginEnd" id="reset" text="{i18n>resetCaption}"
						visible="true" press="handleResetPress" />
				</f:content>
			</f:SimpleForm>
		</VBox>
	</Page>

</core:View>