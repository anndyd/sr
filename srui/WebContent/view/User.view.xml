<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	controllerName="sap.it.sr.ui.view.User" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page 
		title="{i18n>userTitle}"
		id="userPage">
		<VBox>
			<f:SimpleForm id="userForm" minWidth="1024" backgroundDesign="Solid"
				maxContainerCols="2" editable="true" layout="ResponsiveGridLayout"
				labelSpanL="4" labelSpanM="4" emptySpanL="1" emptySpanM="1"
				columnsL="1" columnsM="1" class="editableForm">
				<f:content>
					<Label text="{i18n>userName}" />
					<Input value="{input>userName}" type="Text"
						enabled="true" editable="true" maxLength="8">
						<layoutData>
							<l:GridData span="L2 M2 S4" />
						</layoutData>
					</Input>
					<Input value="{input>fullName}" type="Text" placeholder="{i18n>userFullName}"
						enabled="true" editable="true" >
						<layoutData>
							<l:GridData span="L2 M3 S4" />
						</layoutData>
					</Input>						
					<Label text="{i18n>status}" />
					<CheckBox selected="{input>status}" text="{i18n>active}">
						<layoutData>
							<l:GridData span="L2 M2 S4" />
						</layoutData>
					</CheckBox>
					<Label text="{i18n>pickLocation}" />
					<Input value="{input>pickLocation}" type="Text"
						enabled="true" editable="true">
						<layoutData>
							<l:GridData span="L2 M2 S4" />
						</layoutData>
					</Input>

				</f:content>
			</f:SimpleForm>
		</VBox>
		<Table id="idUserlist" inset="false"
			backgroundDesign="Solid"
			items="{
				path: '/',
				sorter: {
					path: 'userName'
				}
			}"
			itemPress="onTablePress"
		>
			<columns>
				<Column id="userName" width="8em">
					<Text text="{i18n>userName}" />
				</Column>
				<Column id="fullName">
					<Text text="{i18n>userFullName}" />
				</Column>
				<Column id="status">
					<Text text="{i18n>status}" />
				</Column>
				<Column id="pickLocation">
					<Text text="{i18n>pickLocation}" />
				</Column>
			</columns>
			<items>
				<ColumnListItem type="Active">
					<cells>
						<ObjectIdentifier text="{userName}" />
						<Text text="{fullName}" />
						<Text text="{
							path: 'status',
							formatter: 'sap.it.sr.ui.js.Formatter.userStatus'
						}" />
						<Text text="{pickLocation}" />
					</cells>
				</ColumnListItem>
			</items>
		</Table>

		<footer>
			<Bar>
				<contentRight>
					<Button class="sapUiSmallMarginEnd" id="add" text="{i18n>add}"
						type="Accept" visible="true" press="handleAddPress" />
					<Button class="sapUiSmallMarginEnd" id="save" text="{i18n>save}"
						type="Emphasized" visible="true" press="handleSavePress" />
				</contentRight>
			</Bar>
		</footer>
	</Page>

</core:View>