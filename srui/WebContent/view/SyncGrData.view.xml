<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	controllerName="sap.it.sr.ui.view.SyncGrData" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page 
		title="{i18n>syncGrDataTitle}"
		id="SyncGrDataPage">
		<VBox>
			<f:SimpleForm id="syncForm" minWidth="1024" backgroundDesign="Solid"
				maxContainerCols="2" editable="true" layout="ResponsiveGridLayout"
				labelSpanL="4" labelSpanM="4" emptySpanL="1" emptySpanM="1"
				columnsL="1" columnsM="1" class="editableForm">
				<f:content>
					<Label text="{i18n>syncStartTime}" />
					<DateTimePicker
						id="DP1"
						value="{startTime}"
						valueFormat="yyyy-MM-dd HH:mm:ss" displayFormat="short"
						class="sapUiSmallMarginBottom">
						<layoutData>
							<l:GridData span="L2 M3 S4" />
						</layoutData>
					</DateTimePicker>	
				</f:content>
			</f:SimpleForm>
		</VBox>
	
		<Table id="idSyncGrDataTable"
			backgroundDesign="Solid"
			inset="false"
			items="{
				path: '/'}">
			<columns>
				<Column>
					<Text text="" />
				</Column>
				<Column>
					<Text text="" />
				</Column>
			</columns>
			<items>
				<ColumnListItem vAlign="Middle" type="Navigation">
					<cells>
						<Text text="{zkey}" />
						<Text text="{zvalue}" />
					</cells>
				</ColumnListItem>
			</items>
		</Table>

		<footer>
			<Bar>
				<contentRight>
					<Button class="sapUiSmallMarginEnd" id="sync" text="{i18n>syncGrData}"
						type="Emphasized" visible="true" press="refreshData" icon="sap-icon://synchronize" />
				</contentRight>
			</Bar>
		</footer>
	</Page>
</core:View>