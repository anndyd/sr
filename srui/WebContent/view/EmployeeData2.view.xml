<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	controllerName="sap.it.sr.ui.view.EmployeeData2" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page 
		title="{i18n>empDataTitle}"
		id="empDataPage">
		<VBox>
			<f:SimpleForm id="empForm" minWidth="1024"
				maxContainerCols="2" editable="true" layout="ResponsiveGridLayout"
				labelSpanL="4" labelSpanM="4" emptySpanL="1" emptySpanM="1"
				columnsL="1" columnsM="1" class="editableForm">
				<f:content>
					<Label text="{i18n>empId}" />
					<Input value="{input>empId}" type="Text" submit="onEmpChange"
						enabled="true" editable="true" maxLength="8">
						<layoutData>
							<l:GridData span="L2 M2 S4" />
						</layoutData>
					</Input>
					<Input value="{input>empName}" type="Text" placeholder="{i18n>empName}"
						enabled="true" editable="true" >
						<layoutData>
							<l:GridData span="L2 M3 S4" />
						</layoutData>
					</Input>						
					<Label text="{i18n>badgeId}" />
					<Input value="{input>badgeId}" type="Text"
						enabled="true" editable="true" maxLength="8">
						<layoutData>
							<l:GridData span="L2 M2 S4" />
						</layoutData>
					</Input>

				</f:content>
			</f:SimpleForm>
		</VBox>

		<footer>
			<Bar>
				<contentRight>
					<Button class="sapUiSmallMarginEnd" id="save" text="{i18n>save}"
						type="Emphasized" visible="true" press="handleSavePress" />
				</contentRight>
			</Bar>
		</footer>
	</Page>

</core:View>