<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core"
 	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
		<VBox>
			<f:SimpleForm id="pdForm" minWidth="1024"
				maxContainerCols="2" editable="true" layout="ResponsiveGridLayout"
				labelSpanL="4" labelSpanM="4" emptySpanL="1" emptySpanM="1"
				columnsL="1" columnsM="1" class="editableForm">
				<f:content>
					<Label text="{i18n>badgeId}" />
					<Input value="{input>badgeId}" type="Text" liveChange="onBadgeChange"
						enabled="true" editable="true" maxLength="8">
						<layoutData>
							<l:GridData span="L2 M2 S4" />
						</layoutData>
					</Input>
					
					<Label text="{i18n>empId}" />
					<Input id="empId" value="{input>empId}" type="Text" liveChange="onEmpChange"
						enabled="true" editable="true" maxLength="8">
						<layoutData>
							<l:GridData span="L2 M2 S4" />
						</layoutData>
					</Input>
					<Input value="{input>empName}" type="Text" placeholder="{i18n>empName}"
						enabled="false" editable="false" >
						<layoutData>
							<l:GridData span="L2 M3 S4" />
						</layoutData>
					</Input>
						
					<Label text="{i18n>agentId}" />
					<Input value="{input>agentId}" type="Text" liveChange="onAgentChange"
						enabled="true" editable="true" maxLength="8">
						<layoutData>
							<l:GridData span="L2 M2 S4" />
						</layoutData>
					</Input>
					<Input value="{input>agentName}" type="Text" placeholder="{i18n>empName}"
						enabled="false" editable="false" >
						<layoutData>
							<l:GridData span="L2 M3 S4" />
						</layoutData>
					</Input>
					<Label text="{i18n>cpart}" />
					<CheckBox selected="{input>cpart}" text="{i18n>yes}" visible="{input>cpart}">
						<layoutData>
							<l:GridData span="L2 M2 S4" />
						</layoutData>
					</CheckBox>
					<Label text="{i18n>poNumber}" />
					<Input value="{input>poNum}" type="Text" visible="{input>cpart}"
						enabled="true" editable="true" maxLength="8">
						<layoutData>
							<l:GridData span="L2 M2 S4" />
						</layoutData>
					</Input>
					
				</f:content>
			</f:SimpleForm>
		</VBox>

</core:FragmentDefinition>
