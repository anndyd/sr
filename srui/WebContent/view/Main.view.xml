<mvc:View
    controllerName="sap.it.sr.ui.view.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page class="mainpage" backgroundDesign="Transparent"
    	showHeader="false">
        <TileContainer
            id="container"
            tiles="{/}">
            <StandardTile
                press="onTilePress"
                icon="sap-icon://{icon}"
                title="{title}"
                info="{info}"
                />
        </TileContainer>
    </Page>
</mvc:View>